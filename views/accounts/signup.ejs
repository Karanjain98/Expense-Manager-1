<% layout('layout')%>
<script src="/js/signup.js"></script>
<div class="container">
    <h1>Sign Up</h1>
    <hr>
    <div class="row">
        <div class="col-lg-6">
            <% if(errors.length>0) {%>
            <div class="alert alert-danger alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                <%= errors %>
            </div>
            <%}%>
            <form method="post">
                <div class="form-group">
                    <label for="name">Name : </label>
                    <input class="form-control press" name="name" type="text" id="box-name" required onfocusout="myFunction1()">
                </div>
                <div class="form-group">
                    <label for="email">Email : </label>
                    <input class="form-control press" name="email" type="email" id="box-email" onfocusout="myFunction2()" required>
                </div>
                <div class="form-group">
                    <label for="password">Password : </label>
                    <input class="form-control press" name="password" type="password" id="box-password" onfocusout="myFunction3()" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal" id="signup">Signup</button>
                </div>
            </form>
            <form action="/otp" method="post">
                <input type="hidden" name="name" id="modal-name">
                <input type="hidden" name="email" id="modal-email">
                <input type="hidden" name="password" id="modal-password">
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Verification</h4>
                            </div>
                            <div class="modal-body text-center">
                                <p>Check your email id for OTP.</p>
                            </div>
                            <div class="form-group text-center" style="margin: 0 25%">
                                <label for="otp">Enter OTP : </label>
                                <input class="form-control" name="otp" type="number" required>
                            </div>
                            <br>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-info">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
